<nav class="navbar navbar-expand-lg navbar-dark bg-secondary">
  <div class="container-fluid">
    <a class="navbar-brand" href="/player"><%= siteName %></a>
    <div class="d-flex justify-content-right">



      <!--Broadcast dropdown -->
      <div class="btn-group">
        <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
          Broadcasts
        </button>
        <ul class="dropdown-menu dropdown-menu-end">
          <% broadcasts.forEach( (broadcast) => { %>
          <li><a class="dropdown-item" href="/player#<%= broadcast.name %>"><%= broadcast.title %></a></li>
          <% }) %>
        </ul>
      </div>
      <!-- End broadcast dropdown -->
      <!--Stream dropdown -->
      <div class="btn-group">
        <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
          Streams
        </button>
        <ul class="dropdown-menu dropdown-menu-end">
          <% viewStreams.forEach( (stream) => { %>
          <li><a class="dropdown-item" href="/player#<%= stream.name %>"><%= stream.title %></a></li>
          <% }) %>
        </ul>
      </div>
      <!-- End stream dropdown -->
      <!--Switcher dropdown -->
      <% if (renderData.admins.has(userid) && renderData.admins.get(userid).broadcasts.length > 0) { %>
      <div class="btn-group">
        <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
          Switcher
        </button>
        <ul class="dropdown-menu dropdown-menu-end">
          <% renderData.admins.get(userid).broadcasts.forEach( (broadcast) => {
            var broadcastKey = broadcast;
            var broadcastName = renderData.broadcasts.get(broadcast).name;
            %>
          <li><a class="dropdown-item" href="/switcher/<%= broadcastName %>"><%= broadcastKey %></a></li>
          <% }) %>
        </ul>
      </div>
      <%}%>
      <!-- End switcher dropdown -->

      <!--User dropdown -->
      <div class="btn-group">
        <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
          <% if (photoUrl) {%> 
            <img class="avatar" alt="<%= username %>" src="<%= photoUrl %>"/>
          <%} else {%>
            <img class="avatar discordicon" alt="<%= username %>" src="/images/discordicon.png"/>
          <%}%>
          <%= username %>
        </button>
        <ul class="dropdown-menu dropdown-menu-end">
          <% if (renderData.admins.has(userid) && renderData.admins.get(userid).streams.length > 0) { %>
            <li><a class="dropdown-item" href="/streamkeys">Your stream keys</a></li>
            <li><hr class="dropdown-divider"></li>
          <%}%>
          <li><a class="dropdown-item" href="/logout">Logout</a></li>
        </ul>
      </div>
      <!-- End channel dropdown -->
    </div>
  </div>
</nav>

